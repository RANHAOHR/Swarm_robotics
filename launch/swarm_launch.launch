<launch>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <group ns="/robot1">
    <param name="tf_prefix" value="robot1"/>
    
    <include file="$(find swarm_robotics)/launch/spawn_robot.launch">
      <arg name="name" value="/robot1"/>
      <!-- <arg name="model" default="$(find swarm_robotics)/urdf/iRobot.xacro" /> -->
      <arg name="control_param" value="/robot1"/>
      <arg name="pos_x" value="0.1"/>
    </include>

      <!-- publish to visualize in rviz -->
      <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher1" >
          <param name="publish_frequency" type="double" value="50.0" />
      </node>
  </group>

  <group ns="/robot2">
    <param name="tf_prefix" value="robot2"/>

    <include file="$(find swarm_robotics)/launch/spawn_robot.launch">
      <arg name="name" value="/robot2"/>
      <arg name="control_param" value="/robot2"/>
      <arg name="pos_x" value="1"/>
    </include>

      <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher1" >
          <param name="publish_frequency" type="double" value="50.0" />
      </node>

  </group>

  <group ns="/robot3">
    <param name="tf_prefix" value="robot3"/>

    <include file="$(find swarm_robotics)/launch/spawn_robot.launch">
      <arg name="name" value="/robot3"/>
      <arg name="control_param" value="/robot3"/>
      <arg name="pos_x" value="1"/>
      <arg name="pos_y" value="1"/>
    </include>

      <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher1" >
          <param name="publish_frequency" type="double" value="50.0" />
      </node>
  </group>

  <param name="robot_description" command="$(find xacro)/xacro.py '$(find swarm_robotics)/urdf/iRobot.xacro'" /> 
  <!-- launch the controller manager -->
  <include file="$(find swarm_robotics)/launch/joint_controller.launch">
  </include>

</launch>